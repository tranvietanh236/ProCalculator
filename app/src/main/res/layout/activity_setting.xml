<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.V1solution.procaculator.ui.setting.SettingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_header"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ic_back"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_back"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <TextView
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:gravity="center"
                android:fontFamily="@font/opensans_bold"
                android:textSize="20sp"
                android:text="@string/setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_setting" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_default_setting"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_header"
            android:layout_width="match_parent"
            android:background="@drawable/bg_border_20_grey"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_default_setting"
                android:fontFamily="@font/opensans_medium"
                android:textSize="14sp"
                android:textColor="@color/_747474"
                android:layout_margin="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Default settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_default_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ic_language"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/ic_language_setting"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="14dp"
                        app:layout_constraintStart_toEndOf="@id/ic_language"
                        android:text="@string/language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_marginVertical="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#D3D3D3"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ic_share"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/ic_share"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="14dp"
                        app:layout_constraintStart_toEndOf="@id/ic_share"
                        android:text="@string/share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_marginVertical="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#D3D3D3"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ic_rating"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/ic_rate"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="14dp"
                        app:layout_constraintStart_toEndOf="@id/ic_rating"
                        android:text="@string/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_marginVertical="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#D3D3D3"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_policy"
                    android:layout_marginBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ic_policy"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/ic_polixy"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="14dp"
                        app:layout_constraintStart_toEndOf="@id/ic_policy"
                        android:text="@string/privacy_policy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@+id/cl_default_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_border_20_grey"
            android:layout_marginTop="12dp"
            android:padding="12dp">

            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/Advanced_settings"
                android:text="Advanced settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/Advanced_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginTop="16dp"
                    android:id="@+id/cl_themes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ic_themes"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/ic_theme"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="14dp"
                        app:layout_constraintStart_toEndOf="@id/ic_themes"
                        android:text="@string/theme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_marginVertical="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#D3D3D3"/>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_Vibration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ic_Vibration"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/ic_vabration"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="14dp"
                        app:layout_constraintStart_toEndOf="@id/ic_Vibration"
                        android:text="@string/vibration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_marginVertical="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#D3D3D3"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_VAllow_selective_history_deletion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ic_VAllow_selective_history_deletion"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/ic_history_deletion"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="14dp"
                        app:layout_constraintStart_toEndOf="@id/ic_VAllow_selective_history_deletion"
                        android:text="@string/allow_selective_history_deletion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_marginVertical="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#D3D3D3"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_Automatically_save_calculations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ic_Automatically_save_calculations"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/ic_automatically_save_calculator"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="14dp"
                        app:layout_constraintStart_toEndOf="@id/ic_Automatically_save_calculations"
                        android:text="@string/automatically_save_calculations"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_marginVertical="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#D3D3D3"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_Long_press_to_copy_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ic_Long_press_to_copy_value"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/ic_long_press_to_copy_value"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="14dp"
                        app:layout_constraintStart_toEndOf="@id/ic_Long_press_to_copy_value"
                        android:text="@string/long_press_to_copy_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_marginVertical="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#D3D3D3"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_Keep_device_awak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ic_Keep_device_awak"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/ic_keep_device_awake"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="14dp"
                        app:layout_constraintStart_toEndOf="@id/ic_Keep_device_awak"
                        android:text="@string/keep_device_awake"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_marginVertical="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#D3D3D3"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_Results_save_in_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ic_Results_save_in_history"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/ic_results_save_in_history"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="14dp"
                        app:layout_constraintStart_toEndOf="@id/ic_Results_save_in_history"
                        android:text="@string/results_save_in_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_marginVertical="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#D3D3D3"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_radians"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ic_radians"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/ic_radians"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="14dp"
                        app:layout_constraintStart_toEndOf="@id/ic_radians"
                        android:text="@string/radians"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_marginVertical="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#D3D3D3"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_Scientific_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ic_Scientific_mode"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/ic_scientific_mode"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="14dp"
                        app:layout_constraintStart_toEndOf="@id/ic_Scientific_mode"
                        android:text="Scientific mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_marginVertical="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#D3D3D3"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_split_the_parenthese"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ic_split_the_parenthese"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/ic_split_the_parentheses_button_into_two_button"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="14dp"
                        app:layout_constraintStart_toEndOf="@id/ic_split_the_parenthese"
                        android:text="@string/split_the_parentheses_button_into_two_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_marginVertical="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#D3D3D3"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_add_a_modulo_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ic_add_a_modulo_button"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/ic_add_a_modulo_button"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="14dp"
                        app:layout_constraintStart_toEndOf="@id/ic_add_a_modulo_button"
                        android:text="@string/add_a_modulo_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>